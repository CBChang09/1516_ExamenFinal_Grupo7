@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900' rel='stylesheet' type='text/css'>

    <!-- Page title -->
    <title>LUNA | Responsive Admin Theme</title>

    <!-- Vendor styles -->
    <link rel="stylesheet" href="~/Scripts/assets/vendor/fontawesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Scripts/assets/vendor/animate.css/animate.css" />
    <link rel="stylesheet" href="~/Scripts/assets/vendor/bootstrap/css/bootstrap.css" />

    <!-- App styles -->
    <link rel="stylesheet" href="~/Scripts/assets/styles/pe-icons/pe-icon-7-stroke.css" />
    <link rel="stylesheet" href="~/Scripts/assets/styles/pe-icons/helper.css" />
    <link rel="stylesheet" href="~/Scripts/assets/styles/stroke-icons/style.css" />
    <link rel="stylesheet" href="~/Scripts/assets/styles/style.css">

</head>
<body class="blank">

    <!-- Wrapper-->
    <div class="wrapper">

        <!-- Main content-->
        <section class="content">
            <div class="back-link">
                <a href="~/Home/Index" class="btn btn-accent">Back to Dashboard</a>
            </div>

            <div class="container-center animated slideInDown">

                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-unlock"></i>
                    </div>
                    <div class="header-title">
                        <h3>Login</h3>
                        <small>
                            Ingresa tus credenciales
                        </small>
                    </div>
                </div>

                <div class="panel panel-filled">
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label class="control-label" for="username">Username</label>
                                <input type="text" placeholder="example@gmail.com" title="Please enter you username" required="" name="username" id="username" class="form-control">
                                <span class="help-block small">Your unique username to app</span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="password">Password</label>
                                <input type="password" title="Please enter your password" placeholder="******" required="" name="password" id="password" class="form-control">
                                <span class="help-block small">Your strong password</span>
                            </div>
                            <div>
                                <button class="btn btn-accent">Login</button>
                                <a class="btn btn-default" href="register.html">Register</a>
                            </div>
                        }
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                        }
                    </div>
                </div>

            </div>
        </section>
        <!-- End main content-->

    </div>
    <!-- End wrapper-->
    <!-- Vendor scripts -->
    <script src="~/Scripts/assets/vendor/pacejs/pace.min.js"></script>
    <script src="~/Scripts/assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/assets/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- App scripts -->
    <script src="~/Scripts/assets/scripts/luna.js"></script>

</body>
</html>
