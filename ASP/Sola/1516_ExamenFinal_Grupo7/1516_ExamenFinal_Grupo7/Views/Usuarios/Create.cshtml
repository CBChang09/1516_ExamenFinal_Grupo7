@model _1516_ExamenFinal_Grupo7.Models.Usuario

@{
    ViewBag.Title = "Crear Usuario";
}

<h2>Crear Nuevo Usuario</h2>

@using (Html.BeginForm("Create", "Usuarios", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Apellidos)
        @Html.TextBoxFor(model => model.Apellidos, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Telefono)
        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
    </div>
    <input type="submit" value="Crear" class="btn btn-success" />
}
<a href="@Url.Action("Index", "Usuarios")" class="btn btn-secondary">Cancelar</a>
